{
  "version": 2,
  "name": "todolist-server",
  "builds": [
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30 // Set the timeout to 30 seconds or adjust as needed
    }
  }
}
